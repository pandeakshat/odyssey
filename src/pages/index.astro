---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { buttonVariants } from '@/components/ui/button'

import {PreFace, Begin, Chapterone, Research, SelfAssess, Visualize} from '@/components/odysseycard'
---

<BaseLayout
  title="Odyssey - PandeAkshat"
  description="Odyssey Website - "
>
  <section class="container grid items-center gap-6 pb-8 pt-6 md:py-10">
    <div class="flex flex-col items-start gap-2">
      <h1
        class="text-3xl font-extrabold leading-tight tracking-tighter md:text-4xl"
      >
        Odyssey by Akshat Pande.<br class="hidden sm:inline" />
      </h1> <br />
      <p class="text-lg text-muted-foreground">
        A new journey, no schedule, no consistency, no plan. 
        <br />
        Lesson, milestones, obstacles, celebrations, events, memories, and love.
        <br />
        Carved in memory, and in isolation, yet not. <br />Poetry, stories, quotes, and images to depict it all. <br /> <br />
      </p>
      <br />

      <div class="flex-container">
        <div class="flex-item"><PreFace client:load/> </div>
        <div class="flex-item"><Begin client:load/></div>
        <div class="flex-item"><Chapterone client:load/></div>
        <div class="flex-item"><Research client:load/></div>
        <div class="flex-item"><SelfAssess client:load/></div>  
        <div class="flex-item"><Visualize client:load /></div>
      </div>

  
      
    </div>
    <div class="flex gap-4">
      <a
        href="https://medium.com/@pandeakshat"
        target="_blank"
        rel="noreferrer"
        class={buttonVariants()}
      >
        Medium
      </a>
      <a
        href="https://pandeakshat.com"
        target="_blank"
        rel="noreferrer"
        class={buttonVariants({ variant: 'outline' })}
      >
        Website
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  .flex-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between; /* Items are evenly distributed in the line */
}

.flex-item {
  flex: 1 1 auto; /* Each item takes up equal space */
  min-width: 0;
  box-sizing: border-box;
  padding: 20px; /* Margin between items */
}

@media (max-width: 600px) {
  .flex-item {
    flex: 1 1 100%; /* Each item takes full width on smaller screens */
  }
}

.flex-item:last-child {
  margin-right: 0; /* Remove margin from the last item */
}

</style>